<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AddAuthor</servlet-name>
        <servlet-class>com.books.AddAuthor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAuthor</servlet-name>
        <servlet-class>com.servlet.DeleteAuthor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <servlet-class>com.servlet.UpdateAuthorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePublisherServlet</servlet-name>
        <servlet-class>com.servlet.UpdatePublisherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePublisher</servlet-name>
        <servlet-class>com.servlet.DeletePublisher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAuthor</servlet-name>
        <url-pattern>/AddAuthor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAuthor</servlet-name>
        <url-pattern>/DeleteAuthor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <url-pattern>/UpdateAuthorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePublisherServlet</servlet-name>
        <url-pattern>/UpdatePublisherServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePublisher</servlet-name>
        <url-pattern>/DeletePublisher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
